<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for(@book, url:"/books/#{@book.id}") do |book| %>
      <div class="field row">
        <%= book.label :title, "Title" %>
        <%= book.text_field :title, class: "col-xs-12" %>
      </div>
      <div class="field row">
        <%= book.label :tag_list, 'タグ' %>
        <%= book.text_field :tag_list, value: @book.tag_list.join(','), id: 'tags' %>
      </div>
      <div class="field row">
        <%= book.label :body, "Opinion" %>
        <%= book.text_area :body, class: "col-xs-12" %>
      </div>
      <div class="actions row">
        <%= book.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
      </div>
    <% end %>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
  </div>
  <div class="col-md-3"></div>
</div>