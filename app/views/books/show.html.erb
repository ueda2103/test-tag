<div class="row">
  <%= render 'layouts/sidemenu' %>

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @book_show.user, :profile_image, :fill, 100, 100, class: "attachment user profile_image", fallback: "no_image.jpg", size: '100x100' %><br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to "#{@book_show.title}", book_path(@book_show.id) %>
          </td>
          <td><%= @book_show.body %></td>
          <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book_show.id), class: "btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn-sm btn-danger" %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>